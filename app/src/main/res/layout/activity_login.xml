<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/lightgrey"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a123sold.a123soldinspection.LoginActivity">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LOG IN"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please fill your login information"
            android:textColor="@color/imageback"
            android:typeface="serif"
            android:layout_marginTop="4sp"
            android:textSize="12sp"
            />
        <EditText
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:id="@+id/editTextusername"
            android:singleLine="true"
            android:padding="12sp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:background="@drawable/edittextform_background"
            android:drawableRight="@drawable/username" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="12sp"
            android:padding="12sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:password="true"
            android:fontFamily="sans-serif"
            android:background="@drawable/edittextform_background"
            android:id="@+id/editTextpassword"
            android:singleLine="true"
            android:textSize="16sp"
            android:drawableRight="@drawable/password" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="ENTER"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:id="@+id/button2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Forgot your Password ?"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/ForgotPassword" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="5sp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cateorycard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0sp"
        card_view:cardMaxElevation="0sp"
        android:touchscreenBlocksFocus="false"
        >
        <RelativeLayout
            android:layout_height="match_parent"
            android:id="@+id/rlcard"
            android:visibility="gone"
            android:background="@color/backrecycle"
            android:layout_width="match_parent">
            <ImageView
                android:layout_width="20sp"
                android:src="@drawable/tick"
                android:layout_height="20sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/tickimage"
                />
        </RelativeLayout>
            <RelativeLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                >

                <LinearLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="90sp"
                        android:padding="30sp"
                        android:src="@drawable/underhood"
                        android:layout_height="90sp"
                        android:id="@+id/cateoryimage"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Inspection Category"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/categorytext" />
                </LinearLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>